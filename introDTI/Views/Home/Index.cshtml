    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true, // Chỉ chạy hiệu ứng 1 lần khi scroll xuống
            offset: 120, // Khoảng cách bắt đầu chạy
            duration: 800
        });

            document.addEventListener("DOMContentLoaded", function () {
            // Cấu hình thời gian chuyển (3000ms = 3 giây, 5000ms = 5 giây)
            const delayTime = 2000;

            const tabList = document.querySelectorAll('#pills-tab button[data-bs-toggle="pill"]');
            const tabContent = document.getElementById('pills-tabContent');
            let activeIndex = 0;
            let intervalId;

            // Hàm chuyển Tab tiếp theo
            function rotateTabs() {
                activeIndex = (activeIndex + 1) % tabList.length; // Quay vòng về 0 nếu hết
                const nextTab = new bootstrap.Tab(tabList[activeIndex]);
                nextTab.show();
            }

            // Bắt đầu chạy tự động
            function startAutoPlay() {
                intervalId = setInterval(rotateTabs, delayTime);
            }

            // Dừng chạy
            function stopAutoPlay() {
                clearInterval(intervalId);
            }

            // --- KHỞI ĐỘNG ---
            startAutoPlay();

            // --- XỬ LÝ TƯƠNG TÁC NGƯỜI DÙNG ---

            // 1. Nếu người dùng bấm nút -> Reset lại bộ đếm
            tabList.forEach((tab, index) => {
                tab.addEventListener('click', () => {
                    stopAutoPlay(); // Dừng cái cũ
                    activeIndex = index; // Cập nhật vị trí đang chọn
                    startAutoPlay(); // Chạy lại cái mới
                });
            });

            // 2. Nếu người dùng đang rê chuột vào nội dung để đọc -> Tạm dừng
            if(tabContent) {
                tabContent.addEventListener('mouseenter', stopAutoPlay);
                tabContent.addEventListener('mouseleave', startAutoPlay);
            }
        });
    </script>
