    <script>
        AOS.init({
            once: true, offset: 100, duration: 800
        });

        // --- SCRIPT TỰ ĐỘNG CHUYỂN TAB LỢI ÍCH ---
        document.addEventListener("DOMContentLoaded", function() {
            const tabButtons = document.querySelectorAll('#pills-tab .nav-link');
            const tabContent = document.getElementById('pills-tabContent');
            const intervalTime = 2000; // Thời gian chuyển (4000ms = 4 giây)
            let activeIndex = 0;
            let autoPlayInterval;

            // Hàm chuyển sang tab tiếp theo
            function nextTab() {
                activeIndex = (activeIndex + 1) % tabButtons.length; // Vòng lặp lại 0 khi hết
                const nextButton = tabButtons[activeIndex];
                const tabInstance = new bootstrap.Tab(nextButton);
                tabInstance.show();
            }

            // Bắt đầu chạy tự động
            function startAutoPlay() {
                autoPlayInterval = setInterval(nextTab, intervalTime);
            }

            // Dừng chạy
            function stopAutoPlay() {
                clearInterval(autoPlayInterval);
            }

            // --- KHỞI CHẠY ---
            startAutoPlay();

            // --- XỬ LÝ TƯƠNG TÁC ---
            
            // 1. Khi rê chuột vào khu vực Tabs hoặc Nội dung -> Tạm dừng để đọc
            const wrapper = document.querySelector('.role-tabs-pro'); // Khu vực nút
            
            [wrapper, tabContent].forEach(el => {
                if(el) {
                    el.addEventListener('mouseenter', stopAutoPlay);
                    el.addEventListener('mouseleave', startAutoPlay);
                }
            });

            // 2. Khi người dùng bấm thủ công -> Cập nhật lại vị trí index
            tabButtons.forEach((btn, index) => {
                btn.addEventListener('shown.bs.tab', function () {
                    activeIndex = index; // Đồng bộ vị trí hiện tại
                });
            });
        });
    </script>
