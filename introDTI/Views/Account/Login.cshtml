@model introDTI.Models.LoginViewModel  
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DTI System</title>

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap (optional) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Your custom css -->
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-wrap">
        <div class="login-grid">

            <!-- LEFT: Illustration area -->
            <aside class="illustration-side">
                <div class="illustration-overlay">
                    <div class="brand-top">
                        <img src="/img/STTECH.png" alt="STTECH" class="brand-logo" />
                        <div class="brand-title">
                            <h6>STTECH</h6>
                            <small>DTI Platform</small>
                        </div>
                    </div>

                    <div class="hero-text">
                        <h1>Nền tảng DTI</h1>
                        <p>Chuyển đổi số Giáo dục — Giám sát dữ liệu thời gian thực & hỗ trợ ra quyết định.</p>

                        <ul class="feature-list">
                            <li><i class="fas fa-robot"></i> AI-driven insights</li>
                            <li><i class="fas fa-database"></i> Data pipeline & analytics</li>
                            <li><i class="fas fa-shield-alt"></i> Bảo mật cấp cao</li>
                        </ul>
                    </div>

                    <div class="illustration-3d">
                        <!-- Thay đường dẫn này bằng ảnh 3D AI của bạn -->
                        <img src="/img/illustration-3d.png" alt="3D AI Illustration">
                    </div>

                    <div class="illustration-footer">
                        <small>© 2025 ST Technology</small>
                    </div>
                </div>
            </aside>

            <!-- RIGHT: Login form -->
            <main class="form-side">
                <div class="form-card">
                    <div class="mobile-brand d-lg-none text-center mb-4">
                        <img src="/img/STTECH.png" alt="STTECH" height="54">
                    </div>

                    <h2 class="mb-1">Đăng nhập</h2>
                    <p class="text-muted mb-4">Đăng nhập để truy cập Nền tảng DTI</p>

                    <form asp-action="Login" method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Tài khoản</label>
                            <div class="input-group custom">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Username" type="text" class="form-control form-control-lg" placeholder="Email hoặc Tên đăng nhập" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <div class="input-group custom position-relative">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" id="passwordInput" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" required />
                                <button type="button" class="btn btn-link toggle-pass" onclick="togglePassword()" aria-label="Hiển thị mật khẩu">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" />
                                <label class="form-check-label small text-muted" for="rememberMe">Ghi nhớ 30 ngày</label>
                            </div>
                            <a href="#" class="small fw-semibold text-primary text-decoration-none">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 btn-gradient mb-3">Đăng nhập hệ thống</button>
                    </form>

                    <div class="divider"><span>hoặc tiếp tục với</span></div>

                    <div class="d-flex gap-2 mt-3">
                        <button class="btn btn-outline-secondary flex-grow-1 sso-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" alt="Google" height="18" class="me-2"> Google
                        </button>
                        <button class="btn btn-outline-secondary flex-grow-1 sso-btn">
                            <img src="/img/vneid-logo.png" alt="VNeID" height="18" class="me-2"> VNeID
                        </button>
                    </div>

                    <p class="text-center small text-muted mt-4 mb-0">
                        Bạn chưa có tài khoản? <a href="#" class="fw-semibold text-primary">Liên hệ Quản trị viên</a>
                    </p>
                </div>
            </main>

        </div>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>
