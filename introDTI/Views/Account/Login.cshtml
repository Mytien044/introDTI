@{
    ViewData["Title"] = "Đăng nhập hệ thống";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - DTI System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="glass-container">

        <div class="brand-side">
            <div class="mb-4">
                <img src="/img/STTECH.png" height="50" alt="Logo" class="mb-3">
                <h3 class="fw-bold text-dark">STTECH DTI</h3>
                <p class="text-muted small">Hệ thống Đánh giá Chuyển đổi số Giáo dục</p>
            </div>


            <img src="https://cdn3d.iconscout.com/3d/premium/thumb/business-analytics-5366665-4486234.png"
                 class="illustration-img"
                 alt="Illustration">

            <div class="mt-4">
                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 rounded-pill">
                    <i class="fas fa-shield-alt me-1"></i> Bảo mật cao
                </span>
            </div>
        </div>

        <div class="form-side">
            <div class="mb-4 text-center text-md-start">
                <h2 class="fw-bold text-dark mb-1">Xin chào! 👋</h2>
                <p class="text-muted">Đăng nhập để quản lý hồ sơ DTI</p>
            </div>

            <form action="/Account/Login" method="post">

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput"><i class="fas fa-user me-2"></i>Tài khoản / Email</label>
                </div>

                <div class="form-floating mb-3 position-relative">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword"><i class="fas fa-lock me-2"></i>Mật khẩu</label>
                    <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted" onclick="togglePassword()" style="cursor: pointer;">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                        <label class="form-check-label text-muted small" for="flexCheckDefault">Ghi nhớ</label>
                    </div>
                    <a href="#" class="text-decoration-none small fw-bold text-primary">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn btn-login-main w-100">Đăng nhập</button>

                <div class="text-center my-3 text-muted small">hoặc tiếp tục với</div>

                <div class="row g-2">
                    <div class="col-6">
                        <button type="button" class="btn btn-outline-secondary w-100 fw-bold border-0 bg-light text-dark">

                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/768px-Google_%22G%22_logo.svg.png" height="18" class="me-2">
                            Google
                        </button>
                    </div>
                    <div class="col-6">
                        <button type="button" class="btn btn-outline-secondary w-100 fw-bold border-0 bg-light text-dark">

                            <img src="https://upload.wikimedia.org/wikipedia/commons/1/10/Logo_VNeID.png" height="22" class="me-2" alt="VNeID Logo">
                            VNeID
                        </button>
                    </div>
                </div><!---->
            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const x = document.getElementById("floatingPassword");
            const icon = document.getElementById("toggleIcon");
            if (x.type === "password") {
                x.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                x.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>